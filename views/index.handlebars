<div class="card-container ">
  <div class="container">
    {{> message}}
    <form action="/expense/search" class="group mt-3" method="POST">
      <div class="form-group">
        <select class="form-control select_month" name="month" id="exampleFormControlSelect1" onchange="submit()">
          <option value=''>月份</option>
          {{#each month}}
          <option value={{this.id}}>{{this.month}}</option>

          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <select class="form-control select_category" id="exampleFormControlSelect1" name="category" onchange="submit()">
          <option value=''>類別</option>
          {{#each category}}
          <option value={{this.id}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </form>
    <div class="totalamount m-1 mb-3 dark-style ">
      <div class="totalamount-title"> 總金額：</div>
      <div class="amount">0</div>
    </div>
    <a class="create-item m-0" href="/expense/add">
      <button type="button" class="btn btn-warning create-btn">記帳囉</button>
    </a>
    <ul class="item-group px-0 dark-style">

      {{#each records}}
      <li class="item light-item {{#unless this.indexBoolean}}dark-item{{/unless}} my-3 ">
        <div class="item-container row">
          <div class="item-info col-8 mt-1 row ">
            <i class="fas {{this.category}} col-1"></i>
            <div class="category col-5">{{this.name}}</div>
            {{#if this.location}}
            <i class="fas fa-map-marker-alt mr-1"></i>
            {{this.location}}
            {{/if}}
          </div>
          <div class="cash col-2">{{this.amount}}</div>
          <div class="feature-btn col-2">
            <a class="edit mr-2" href="/expense/{{this._id}}/edit">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/expense/{{this._id}}?_method=DELETE" class="delete" method="post">
              <button type="submit" class="deleteBtn dark-style"><i class="fas fa-trash-alt"></i></button>
            </form>
          </div>
          <div class='info-data'>{{this.date}}</div>

        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>


