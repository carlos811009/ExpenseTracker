<div class="card-container ">
  <form action="/users/login" class="dark-style form-container" method="post">
    <h2 class="mt-3 dark-style">登入</h2>
    <div class="login-form-group my-3">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
    </div>
    <div class="login-form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
    </div>
    <button type="submit" class="btn btn-primary btn-block loginBtn mt-4">Login</button>
    <a href="/auth/facebook" class="btn btn-info btn-block facebookBtn">Facebook</a>
    <p class="lead mt-4">
      No Account? <a href="/users/register">Register</a>
    </p>
  </form>
</div>